<?xml version='1.0' encoding='utf-8'?>
<widget id="com.oracle.ADFmcContainerTemplate" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="EnableLocation" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="OpenAllWhitelistURLsInWebView" value="true" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="UIWebViewBounce" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <feature name="ADFMobileDeviceProperties">
        <param name="ios-package" value="ADFMobileDevicePropertiesAdaptor" />
    </feature>
    <feature name="ADFMobileFeatures">
        <param name="ios-package" value="ADFMobileFeaturesAdaptor" />
    </feature>
    <feature name="ADFMobileShell">
        <param name="ios-package" value="ADFMobileShellAdaptor" />
    </feature>
    <feature name="AdfmfSlidingWindowPlugIn">
        <param name="ios-package" value="AdfmfSlidingWindowPlugInAdaptor" />
    </feature>
    <feature name="MafLocalNotification">
        <param name="ios-package" value="MafLocalNotificationAdaptor" />
    </feature>
    <feature name="Globalization">
        <param name="ios-package" value="CDVGlobalization" />
    </feature>
    <preference name="CordovaWebViewEngine" value="MafModernWebViewPlugin" />
</widget>
